      <script type="text/javascript">

            // Menu-toggle button

            $(document).ready(function () {
                  $(".menu-icon").on("click", function () {
                        $("nav ul").toggleClass("showing");
                  })

            });

            function lol(y) {
                  y.classList.toggle("change");
            }

            function avanti() {
                  const gallery_item_size = document.querySelector('.grid-item').clientWidth;
                  document.getElementById("gallery_scroller").scrollBy(gallery_item_size, 0);
            }
            function indietro() {
                  const gallery_item_size = document.querySelector('.grid-item').clientWidth;
                  document.getElementById("gallery_scroller").scrollBy(-gallery_item_size, 0);
            }
            var notizie = <%- JSON.stringify(notizie) %>;
            console.log(notizie.length);
            console.log(notizie);
            document.querySelector(".parent").style.gridTemplateColumns = `repeat(${notizie.length}, 35%)`;

            // Funzione per aggiungere una slide al DOM
            function aggiungiSlide(titolo, descrizione, immagine) {
                  const galleryScroller = document.getElementById('gallery_scroller');
                  const newSlide = document.createElement('div');
                  newSlide.classList.add('grid-item');
                  newSlide.innerHTML = `
                  <img src="data:image/jpeg;base64,${immagine}">
                  <b>${titolo}</b>
                  <p>${descrizione}</p>
            `;
                  galleryScroller.appendChild(newSlide);
            }

            // Cicla attraverso l'array di oggetti e aggiunge le slide
            notizie.forEach(notizie => {
                  aggiungiSlide(notizie.titolo, notizie.descrizione, notizie.immagine);
            });

